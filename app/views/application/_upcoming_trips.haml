#upcoming-trips

	.container
		.upcoming-trips-header
			.upcoming-trips-title
				Claim a Trip
				<br>
				%b.upcoming-trips-subtitle
					One-time adventures created by local guides just for you.
			.upcoming-trips-underline

	.col-md-10.col-md-offset-1.upcoming-trips-container
		
		.col-md-6.upcoming-trip-block
			.upcoming-trip
				.upcoming-img{style: "background: url('#{asset_path("background/IndiaMountains.jpg")}') center center no-repeat; background-size: cover;"}
				.fa.fa-plus.see-more-btn{style:"color:#fff;"}
				.upcoming-text{style: "float: right;"}
					.upcoming-title
						Riding the Roof of the World
					.upcoming-title-location
						.fa.fa-map-marker{style:"color:#aa4b41;"}
						Indian Himalayas
					.upcoming-details
						.upcoming-title-dates
							.fa.fa-calendar{style:"color:#aa4b41;"} |
							Early Fall 2016
							.fa.fa-users{style:"color:#aa4b41;"} |
							5-8 travelers
						.upcoming-description
							Traverse the Indian Himalayas on a Royal Enfield motorcycle. Endure challenging climbs and harsh weather as you notch the world's highest roads...
						%a{href: "/india"}
							.upcoming-trip-btn.btn
								Claim this Trip

		.col-md-6.upcoming-trip-block
			.upcoming-trip
				.upcoming-img{style: "background: url('#{asset_path("background/packraftjunglemain.jpg")}') center center no-repeat; background-size: cover;"}
				.fa.fa-plus.see-more-btn{style:"color:#fff;"}
				.upcoming-text{style: "float: right;"}
					.upcoming-title
						Adventure & Conflict in the Amazon
					.upcoming-title-location
						.fa.fa-map-marker{style:"color:#aa4b41;"}
