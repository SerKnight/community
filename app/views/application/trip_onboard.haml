:javascript

	function simpleParallax() {
		var scrolled = $(window).scrollTop() + 1;
		
		$('.hero-image-fix').css('background-position', '0' + -(scrolled * 0.3) + 'px');
	}

	$(window).hero-image-fix(function (e) {
		simpleParallax();
	});

	function simpleParallax() {
		var scrolled = $(window).scrollTop() + 1;
		$('.hero-image-fix-mobile').css('background-position', '0' + -(scrolled * 0.3) + 'px');
	}

	$(window).hero-image-fix-mobile(function (e) {
