	.col-md-12.your-adventure
		.your-adventure-header
			What's your adventure?
		.your-adventure-body
			Propose or claim a trip and we could send you on it.
		%a{href: "/adventure"}
			.your-adventure-btn
				Learn More

:javascript
	$('.upcoming-trip-block').click(function(){
		$(this).find('.upcoming-trip').hover()
	})