		.col-md-6.project-element
			.project-element-image{style: "background: url('#{asset_path("background/coloredcolombiasmall.jpeg")}') center center no-repeat"}
				.project-element-overlay
					.project-element-header
						4. Team
					.project-element-hover
						.project-element-description
